$ErrorActionPreference = "Stop";
trap { $host.SetShouldExit(1) }

$BOSH_INSTALL_TARGET = Resolve-Path "${env:BOSH_INSTALL_TARGET}"

. C:\var\vcap\packages\golang-1-windows\bosh\compile.ps1

$pkg_name="cert-injector.exe"
$pkg_path="."
$go_mod_path="${PWD}\code.cloudfoundry.org\cert-injector"

cd "$go_mod_path"

go.exe build -o "${BOSH_INSTALL_TARGET}\${pkg_name}" "${pkg_path}"
if ($LASTEXITCODE -ne 0) {
    Write-Error "Error compiling: ${pkg_path}"
}

Exit 0